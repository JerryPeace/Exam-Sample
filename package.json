{
  "name": "neptune-web",
  "private": true,
  "scripts": {
    "FORMAT": "------------------------TEST&LINT------------------------------",
    "test": "jest",
    "lint": "next lint --fix",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
    "BUILD": "------------------------------BUILD--------------------------------",
    "build": "next build",
    "analyze-build": "ANALYZE=true next build",
    "PRISMA": "----------------------------PRISMA------------------------------",
    "db-migrate:local": "npx prisma migrate dev",
    "db-migrate": "npx prisma migrate deploy",
    "generateSchema": "npx prisma generate",
    "START": "----------------------------START---------------------------------",
    "start:local": "next dev -p 3001",
    "start:dev": "next dev",
    "start:prd": "npx prisma migrate deploy && next start",
    "DEPLOYMENT": "------------------------DEPLOYMENT--------------------------",
    "docker:image-build": "docker build -t neptune-web-image ."
  },
  "dependencies": {
    "@babel/core": "^7.18.6",
    "@chakra-ui/react": "^2.7.1",
    "@chakra-ui/react-utils": "^2.0.11",
